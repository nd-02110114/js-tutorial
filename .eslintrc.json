{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": ["compat", "flowtype"],
  "rules": {
    "semi": [2, "never"],
    "no-unexpected-multiline": 2,
    "compat/compat": 2,
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "settings": {
    "polyfills": ["fetch"]
  }
}
